function plot_solution(h, lambda, solution)
%MAKE_MOVIE Summary of this function goes here
%   Detailed explanation goes here

    k = lambda*h;
    time = 0:k:2;
    space = -3:h:3;    
    [T,X] = meshgrid(time, space);

    figure(1)
    clf
    axes;  
    
    
    
    
    subplot(2,1,1)
    surf(T,X,solution(:,:,1)');

    xlabel('t');
    ylabel('x');
    zlabel('u(t,x)');
    
    
    

    subplot(2,1,2)
    surf(T,X,solution(:,:,2)');

    xlabel('t');
    ylabel('x');
    zlabel('w(t,x)');
    
   



    
end
